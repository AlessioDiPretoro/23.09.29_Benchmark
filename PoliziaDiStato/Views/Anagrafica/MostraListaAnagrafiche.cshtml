@model IEnumerable<PoliziaDiStato.Models.AnagraficaTrasgressore>

@{
    ViewBag.Title = "MostraListaAnagrafiche";
}

<h2>MostraListaAnagrafiche</h2>

<div>
    <h4>Lista anagrafiche trasgressori</h4>
    <hr />
    <table class="table table-hover table-bordered container text-center">
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Indirizzo</th>
            <th>Citta</th>
            <th>CAP</th>
            <th>Cod_Fisc</th>
            <th>Modifica</th>
            <th>Elimina</th>
        </tr>
        @foreach (PoliziaDiStato.Models.AnagraficaTrasgressore p in Model)
        {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Cognome</td>
                <td>@p.Indirizzo</td>
                <td>@p.Citta</td>
                <td>@p.CAP</td>
                <td>@p.Cod_Fisc</td>
                <td>@Html.ActionLink("✒", "Modifica", new { id = p.IDanagrafica }, new { @class = "btn btn-purple" })</td>
                <td>@Html.ActionLink("🗑", "Elimina", new { id = p.IDanagrafica }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
</div>